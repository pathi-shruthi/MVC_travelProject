@model TravelRequest

<h2>Raise TravelRequest</h2>
<br />
<div>
    <form method="post">

        <div class="form-group">
            <label asp-for="EmployeeId">Select Employee:</label>
            @Html.DropDownListFor(model => model.EmployeeId, (SelectList)ViewBag.Employees, "Select Employee", new { @class = "form-control" })
        </div>
       

        <div class="form-group">
            <label for="FromLocation">FromLocation:</label>
            <input asp-for="FromLocation" class="form-control" name="FromLocation" />
            <span asp-validation-for="FromLocation" style="color:red; font-size:small"></span>
        </div>
        <div class="form-group">
            <label for="ToLocation">ToLocation:</label>
            <input asp-for="ToLocation" class="form-control" name="ToLocation" />
            <span asp-validation-for="ToLocation" style="color:red; font-size:small"></span>
        </div>
       

        <div class="form-group">
            <label for="RequestDate">RequestDate:</label>
            <input asp-for="RequestDate" class="form-control" name="RequestDate" />
            <span asp-validation-for="RequestDate" style="color:red; font-size:small"></span>
        </div>
       
        <br />
        <div asp-validation-summary="All" style="color:red; font-size:small"></div>
        <hr />
        <button type="submit">Submit</button>
    </form>
</div>

@section Scripts{
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
}
